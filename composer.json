{
    "name": "tightenco/jigsaw",
    "description": "Simple static sites with Laravel's Blade.",
    "keywords": [
        "blade",
        "laravel",
        "static",
        "site",
        "generator"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Adam Wathan",
            "email": "adam.wathan@gmail.com"
        },
        {
            "name": "Keith Damiani",
            "email": "keith@tighten.co"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/collections": "^9.0",
        "illuminate/console": "^10.0",
        "illuminate/container": "^10.0",
        "illuminate/filesystem": "^10.0",
        "illuminate/support": "^10.0",
        "illuminate/view": "^10.0",
        "michelf/php-markdown": "^2.0",
        "mnapoli/front-yaml": "^2.0",
        "nunomaduro/collision": "^6.1",
        "spatie/laravel-ignition": "^2.0",
        "symfony/console": "^5.4 || ^6.0",
        "symfony/error-handler": "^5.0 || ^6.0",
        "symfony/finder": "^5.3.7 || ^6.0",
        "symfony/process": "^5.0 || ^6.0",
        "symfony/var-dumper": "^5.0 || ^6.0",
        "symfony/yaml": "^5.0 || ^6.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.14",
        "mikey179/vfsstream": "^1.6.11",
        "mockery/mockery": "^1.4.4",
        "phpunit/phpunit": "^9.5.10"
    },
    "autoload": {
        "psr-4": {
            "TightenCo\\Jigsaw\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "jigsaw"
    ],
    "scripts": {
        "format": "php-cs-fixer fix --verbose"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
